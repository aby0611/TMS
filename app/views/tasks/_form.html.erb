<%= render 'shared/error', obj: @task %>
<%= form_for @task do |f| %>
  <div class="row-fluid">
    <div class="span12">
      <div class="row">
        <div class="span2"><%= f.label :title %></div>
        <div class="span10"><%= f.text_field :title %></div>
      </div>
      <div class="row">
        <div class="span2"><%= f.label :start_date %></div>
        <div class="span4"><%= f.select_date :start_date %></div>

        <div class="span2"><%= f.label :end_date %></div>
        <div class="span4"><%= f.date_field :end_date %></div>
      </div>
      <div class="row">
        <div class="span2"><%= f.label :priority %></div>
        <div class="span4"><%= f.select :priority, select_priority_options %></div>

        <div class="span2"><%= f.label :importance %></div>
        <div class="span4"><%= f.select :importance, select_importance_options %></div>
      </div>
      <div class="row">
        <div class="span2"><%= f.label :owner_id, label: "Assign to " %></div>
        <div class="span4"><%= f.select :owner_id, select_owner_options, include_blank: true %></div>
      </div>
      <div class="row">
        <div class="span2"><%= f.label :requirement %></div>
        <div class="span10"><%= f.text_area :requirement, rows: 5 %></div>
      </div>
      <div class="row">
        <div class="span2"><%= f.label :plan %></div>
        <div class="span10"><%= f.text_area :plan, rows: 10 %></div>
      </div>
    </div>
  </div>

  <br>
  <%= f.submit @task.new_record? ? "Create task" : "Update " , class: 'btn btn-primary' %>
<% end %>