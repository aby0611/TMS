<%= render 'shared/error', obj: @user %>

<%= form_for @user do |f| %>
  <%= f.label :english_name %>
  <%= f.text_field :english_name %>

	<%= f.label :login_id, "Login ID" %>
  <%= f.text_field :login_id %>

  <%= f.label :email %>
  <%= f.text_field :email %>

	<%= f.label :employee_id, "Employ ID" %>
  <%= f.text_field :employee_id %>

  <%= f.label :password %>
  <%= f.password_field :password %>

	<br>
  <%= f.submit @user.new_record? ? "Register" : "Update profile" , class: 'btn btn-primary' %>
<% end %>